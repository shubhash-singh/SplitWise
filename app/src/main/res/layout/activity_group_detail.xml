<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/group_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/amount_to_be_paid_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount to be paid: 0"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:paddingTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/members_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/add_member_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add new member"
        android:padding="8dp" />

    <Button
        android:id="@+id/add_member_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Member"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/bill_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bill Amount"
        android:padding="8dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/add_bill_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bill"
        android:layout_marginTop="8dp" />

</LinearLayout>
