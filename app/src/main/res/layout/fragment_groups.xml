<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/background_color">

    <EditText
        android:id="@+id/group_name_input"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="10dp"
        android:background="@drawable/bg_custom_input"
        android:autofillHints=""
        android:layout_margin="16dp"
        android:hint="@string/enter_group_name"
        android:textColorHint="#4E4E4E"
        android:inputType="text"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/add_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="@string/add_group"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_button_signup"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groups_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:scrollbars="vertical" />
</LinearLayout>
